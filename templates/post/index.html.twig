{% extends 'base.html.twig' %}

{% block body %}
    <h1>List of all Posts</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Illustration</th>
                <th>ID</th>
                <th>Category</th>
                <th>Title</th>
                <th>Show</th>
                <th>Delete</th>
            </tr>
        </thead>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                    {{ message}}
            </div>
        {% endfor %}
        <tbody>
        {% for post in posts %}
            <tr>
                    <td><img src="{{'/uploads/' ~ post.image }}" style="width:200px; height:150px;" ></td>
                    <td>{{ post.id }}</td>
                    <td>{{ post.category }}</td>
                    <td>{{ post.title }}</td>
                    <td><a href="{{  path('post_show', {id: post.id}) }}"><span class="btn btn-success"><i class="fa fa-home"></i></span></a></td>
                    <td><a href="{{ path('post_delete', {id:post.id}) }}"><span class="btn btn-danger"><i class="fa fa-trash"></i></span></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    

{% endblock %}